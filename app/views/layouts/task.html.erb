<!DOCTYPE html>
<html>
<head>
  <title>Ensemble</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<script>
    $(document).ready(function(){

        if (document.cookie.indexOf("tos_seen") == -1) {

            $.colorbox({width:"50%", height:"50%",inline:true, href:"#terms-of-service"});
            $("#-tos-accept-button").on("click", function () {
                $.colorbox.remove();
                document.cookie = "tos_seen=true";
            });
        }
    });
</script>
    <div class="container">
        <div class="row-fluid">
            <div class="span4">
                <%= yield :sidebar%>
            </div>
            <div class="span8">
                <%= yield :workspace %>
            </div>
        </div>
    </div>
</body>
</html>
