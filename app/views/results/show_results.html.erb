<div class="container">
    <h1> RESULTS
        <br>
    <span class="btn-group">
        <%= link_to "As CSV", "/show_results.csv", :class=>"btn btn-mini btn-info"%>
        <%= link_to "As JSON", "/show_results.json", :class=>"btn btn-mini btn-info"%>
    </span>
</h1>

    <br>

    <% @charts.each do |taskname, imgurl| %>
        <h2><%=taskname%></h2>
        <img src="<%= imgurl %>">
        </img>
    <% end %>

    <ul>
        <% @results.each do |r| %>
            <li>
            <%= r.task %> | <%= r.mode %> | <%= r.participant %> | <%= r.runtime %> | <%= r.robot_count %>
            </li>
        <% end %>
    </ul>
</div>
